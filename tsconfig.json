{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    
    "allowJs": true,
    "outDir": "typescript/dist"
  },
  
  "include": ["typescript/**/*"],
  "exclude": ["node_modules"]
}
